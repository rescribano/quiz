<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" placeholder="Escribe la pregunta" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/> <p>
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" placeholder="Escribe la respuesta" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/> <p>
<label for="tema" class="rem">Tema:</label>
<select id="tema" name="quiz[tema]">
  <option value="Otro" <% if (quiz.tema === "Otro") {%>selected<% }%>>Otro</option>
  <option value="Humanidades" <% if (quiz.tema === "Humanidades") {%>selected<% }%>>Humanidades</option>
  <option value="Ocio" <% if (quiz.tema === "Ocio") {%>selected<% }%>>Ocio</option>
  <option value="Ciencia" <% if (quiz.tema === "Ciencia") {%>selected<% }%>>Ciencia</option>
  <option value="Tecnología" <% if (quiz.tema === "Tecnología") {%>selected<% }%>>Tecnología</option>
</select><br/>
